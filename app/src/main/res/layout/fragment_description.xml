<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="0px"
	android:layout_height="match_parent"
	android:layout_weight="1"
	tools:layout_width="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/fragment_description_text_view_brand"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:textSize="25sp"
			tools:text="Some text" />

		<View
			android:id="@+id/fragment_description_view_line"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_below="@id/fragment_description_text_view_brand"
			android:layout_marginBottom="10dp"
			android:background="#000000" />

		<ImageView
			android:id="@+id/fragment_description_image_view_founder"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_below="@id/fragment_description_view_line"
			android:paddingRight="6dp" />

		<TextView
			android:id="@+id/fragment_description_text_view_founder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/fragment_description_view_line"
			android:layout_toRightOf="@+id/fragment_description_image_view_founder"
			android:textColor="@color/colorFounder" />

		<ImageView
			android:id="@+id/fragment_description_image_view_logo"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_below="@+id/fragment_description_image_view_founder"
			android:paddingRight="6dp"
			android:paddingTop="6dp" />

		<TextView
			android:id="@+id/fragment_description_text_view_models"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/fragment_description_text_view_founder"
			android:layout_toRightOf="@+id/fragment_description_image_view_logo"
			android:paddingTop="10dp"
			android:textColor="@android:color/black"
			android:textSize="17sp"
			android:typeface="serif" />

		<TextView
			android:id="@+id/fragment_description_text_view_money"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/fragment_description_text_view_models"
			android:layout_toRightOf="@id/fragment_description_image_view_logo"
			android:paddingTop="10dp"
			android:textColor="@color/colorMoney" />

		<ImageView
			android:id="@+id/fragment_description_image_view_background"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/fragment_description_view_line"
			android:layout_toRightOf="@id/fragment_description_image_view_logo"
			android:alpha="0.1"
			android:scaleType="fitStart" />

	</RelativeLayout>
</ScrollView>

