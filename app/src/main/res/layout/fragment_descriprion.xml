<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="0px"
	android:layout_height="match_parent"
	android:layout_weight="1">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/fragment_descriprion_image_view_founder"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:paddingRight="6dp" />

		<TextView
			android:id="@+id/fragment_descriprion_text_view_founder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/fragment_descriprion_image_view_founder"
			android:textColor="@color/colorFounder" />

		<ImageView
			android:id="@+id/fragment_descriprion_image_view_logo"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_below="@+id/fragment_descriprion_image_view_founder"
			android:paddingRight="6dp"
			android:paddingTop="6dp" />

		<TextView
			android:id="@+id/fragment_descriprion_text_view_models"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/fragment_descriprion_text_view_founder"
			android:layout_toRightOf="@+id/fragment_descriprion_image_view_logo"
			android:paddingTop="10dp"
			android:textColor="@android:color/black"
			android:textSize="17sp"
			android:typeface="serif" />

		<TextView
			android:id="@+id/fragment_descriprion_text_view_money"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/fragment_descriprion_text_view_models"
			android:layout_toRightOf="@id/fragment_descriprion_image_view_logo"
			android:paddingTop="10dp"
			android:textColor="@color/colorMoney" />
	</RelativeLayout>
</ScrollView>

